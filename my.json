[
    {
        "Software": "R",
        "Version": "3.3.2-with-packages",
        "URL_extends": "http://proxy.chtc.wisc.edu/aapohl/sandboxes/R-3.3.2.tar.gz",
        "Substitutions": ["RPACKS"],
        "Example_Git_Repository": "https://github.com/andypohl/chtc-recipes.git",
        "Example_Subdirectory": "chtc-recipes/R/build_chtc.py/basic",
        "Build_Commands": ["",
            "##### ENVIRONMENT CONFIGURATION",
            "",
            "export LD_LIBRARY_PATH=$BUILDDIR/lib:$BUILDDIR/lib64/R/lib",
            "# RDIR was substituted into R and Rscript executables already",
            "export RDIR=$BUILDDIR",
            "# R_HOME is needed for R executable",
            "export R_HOME=$RDIR/lib64/R",
            "# RHOME is needed for Rscript",
            "export RHOME=$R_HOME",
            "export R_ENVIRON=$R_HOME/etc/Renviron",
            "",
            "##### PACKAGE INSTALLATION", 
            "Rscript -e 'install.packages(c(\"{{RPACKS}}\"), repos=\"https://cran.rstudio.com/\")'"
        ]
    }
]
